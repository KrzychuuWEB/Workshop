{% block form_row %}
    {% spaceless %}
        <div class="material-box">
            <div class="material-field {{ form_errors(form) }}">
                {{ form_widget(form) }}
                <div class="field-underline"></div>
                {{ form_label(form) }}
                <span>Wpisane hasło jest nieprawidłowe</span>
            </div>
        </div>
    {% endspaceless %}
{% endblock form_row %}

{% block form_errors %}
    {% if errors|length > 0 %}
        {% for error in errors %}
            {{ error.message }}
        {% endfor %}
    {% endif %}
{% endblock form_errors %}