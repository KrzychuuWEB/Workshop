{% extends 'base.html.twig' %}
{% block title %}Dodaj nowego klienta{% endblock %}
{% block titleMenu %}Dodaj klienta{% endblock %}

{% block body %}
    <section>
        <div class="container" data-title="createcustomer-menu">

            <h2 class="material-heading">Dodaj nowego klienta</h2>

            {{ form_start(form) }}
                {% form_theme form 'form/fields.html.twig' %}

                <div class="box-size-70">
                    {{ form_row(form.firstName) }}
                    {{ form_row(form.lastName) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.postCode) }}
                    {{ form_row(form.phoneNumber) }}
                    {{ form_row(form.address) }}
                </div>

                {% block floatingIcon %}
                    <div class="material-floating-button position-fix-left">
                        <button class="material-lower-shadow material-btn-effect"><span class="fas fa-save fa-fw"></span></button>
                    </div>
                {% endblock %}
            {{ form_end(form) }}

        </div>
    </section>
{% endblock %}